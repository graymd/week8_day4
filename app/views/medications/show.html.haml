.col-md-12
  .col-md-6.col-md-offset-3
    .jumbotron
      .text-center
        %strong
          %h3
            %u
              = @medication.name
        = link_to "Edit Medication", edit_medication_path(@medication)
        |
        = link_to "Delete Medication",  medication_path(@medication), method: :delete
    .list-group-item
      %strong Medication Name:
      = @medication.name
      %br/
      %strong Company:
      = @medication.company
      %br/
      %strong Adverse Reactions:
      = @medication.adverse_reactions
      %br/
      %strong Generic Options Available:
      = @medication.has_generic?
      %br/
    %br
    .list-group-item
      .text-center
        %strong Patient Users:
        %br
        %br
        %ul
          - @patients.each do |patient|
            %li
              = patient.last_name
              = patient.first_name
              %br
